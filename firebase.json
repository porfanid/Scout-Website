{
  "firestore": {
    "rules": ".config/firebase/firestore.rules",
    "indexes": ".config/firebase/firestore.indexes.json"
  },
  "remoteconfig": {
    "template": ".config/firebase/remoteconfig.template.json"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "postdeploy": "firebase deploy --only firestore"
    }
  ],
  "storage": {
    "rules": ".config/firebase/storage.rules"
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "ui": {
      "enabled": true,
      "port": 4000
    },
    "singleProjectMode": true
  }
}
